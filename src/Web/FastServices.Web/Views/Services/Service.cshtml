                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select>
                <i class="zmdi zmdi-chevron-down"></i>
            </div>
            <div class="form-wrapper">
                <label for="">Workers</label>
                <select asp-for="WorkersCount" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <i class="zmdi zmdi-chevron-down"></i>
            </div>

            <button class="buttonOrder" type="submit" data-text="Now">
                <span style="position:absolute">Order</span>
            </button>
        </form>


        @* </ORDER POST *@

    </div>

</div>


<!-- DATE-PICKER -->
<script src="/Template/OrderForm/vendor/date-picker/js/datepicker.js"></script>
<script src="/Template/OrderForm/vendor/date-picker/js/datepicker.en.js"></script>
<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
            }
        });
    }
</script>
