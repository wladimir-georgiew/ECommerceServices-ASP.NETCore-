@using FastServices.Web.ViewModels.Employees
@model NewEmployeeMasterModel

@{
    ViewData["Title"] = "New";
}

<style>
    footer {
        visibility: hidden;
        position: absolute
    }
</style>

<div class="topImageNavBlack">
</div>

<div class="col-md-10 mx-auto py-4">
    <div class="card">
        <div class="card-header bg-primary text-uppercase text-white">
            <h4>Add New Employee Account</h4>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="New" method="post">
                <div style="text-align:left;" asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.FirstName" class="control-label"></label>
                            <input asp-for="@Model.InputModel.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.LastName" class="control-label"></label>
                            <input asp-for="@Model.InputModel.LastName" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.Email" class="control-label"></label>
                            <input asp-for="@Model.InputModel.Email" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.PhoneNumber" class="control-label"></label>
                            <input asp-for="@Model.InputModel.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.Password" class="control-label"></label>
                            <input type="password" asp-for="@Model.InputModel.Password" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.ConfirmPassword" class="control-label"></label>
                            <input type="password" asp-for="@Model.InputModel.ConfirmPassword" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.DepartmentId" class="control-label"></label>
                            <select asp-for="@Model.InputModel.DepartmentId" class="form-control">
                                <option value="">Choose Department</option>
                                @foreach (var department in @Model.Departments)
                                {
                                    <option value="@department.Id">@department.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.Salary" class="control-label"></label>
                            <input asp-for="@Model.InputModel.Salary" class="form-control" />
                            <span asp-validation-for="@Model.InputModel.Salary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.InputModel.ProfileImage" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="@Model.InputModel.ProfileImage" class="custom-file-input" id="customFile">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <a style="color: white" type="button" asp-action="Employees" class="btn btn-lg btn-danger rounded-0 text-uppercase">cancel</a>
                    <input type="submit" value="submit" class="btn btn-lg btn-primary rounded-0 text-uppercase" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}  